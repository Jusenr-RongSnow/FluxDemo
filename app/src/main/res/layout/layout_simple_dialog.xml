<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="@dimen/distance_15dp"
    android:background="@drawable/bg_round_rect_white"
    android:elevation="6dp"
    android:orientation="vertical">

    <!--提示描述-->
    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/distance_20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/distance_40dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:padding="@dimen/distance_8dp"
        android:text="提示描述提示描述提示描述提示描述提示描述提示描述"
        android:textColor="@color/color_313131"
        android:textSize="@dimen/text_size_18sp"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/distance_20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/distance_10dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="内容"
        android:textColor="@color/text_color_646464"
        android:textSize="@dimen/text_size_16sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@id/iv_qr_code"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/distance_15dp"
        android:layout_marginTop="@dimen/distance_20dp"
        android:background="@drawable/btn_get_focus_sel"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp"/>

</LinearLayout>