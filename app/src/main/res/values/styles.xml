<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider</item>
    </style>

    <!--LoadingHUD-->
    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <!--标题栏延时-->
    <style name="style_navigation_bar">
        <item name="android:id">@id/navigation_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navigation_bar_height</item>
        <item name="nav_has_divider">false</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="floatlabelededittext">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/theme_textview_style</item>
    </style>

    <style name="theme_textview_style" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/pink</item>
    </style>

</resources>
